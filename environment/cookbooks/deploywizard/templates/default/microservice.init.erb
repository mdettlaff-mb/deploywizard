#!/bin/sh

SERVICE_NAME=<%= @service_name %>
SERVICE_VERSION<%= @service_version %>
SERVICE_HOME=/opt/microservices/$SERVICE_NAME
OWNER=<%= @owner %>

START_COMMAND="java $SERVICE_HOME/$SERVICE_NAME-$SERVICE_VERSION.jar server $SERVICE_HOME/$SERVICE_NAME.yml"

PIDFILE=/var/run/microservices/$SERVICE_NAME.pid

mkdir `dirname $PIDFILE` > /dev/null 2>&1 || true
chown $OWNER `dirname $PIDFILE`

case "$1" in
  start)
    echo "Starting $SERVICE_NAME..."
    start-stop-daemon --start --pidfile $PIDFILE --make-pidfile --background --exec -- $START_COMMAND
    echo "$SERVICE_NAME started"
    ;;
  stop)
    echo "Stopping $SERVICE_NAME..."
    start-stop-daemon --stop --pidfile $PIDFILE
    echo "$SERVICE_NAME stopped"
    ;;
  restart)
    $0 stop
    $0 start
    ;;
  *)
    echo "Usage: $0 {start|stop|restart}"
    exit 1
esac

exit 0
